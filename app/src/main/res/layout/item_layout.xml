<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android = "http://schemas.android.com/apk/res/android"
                                                   xmlns:app = "http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools = "http://schemas.android.com/tools"
                                                   android:layout_width = "match_parent"
                                                   android:layout_height = "wrap_content"
                                                   android:id = "@+id/linearLayout">

    <TextView
            android:id = "@+id/song_tvi"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:textSize = "18sp"
            android:textColor = "@android:color/holo_orange_light"
            android:layout_marginTop = "1dp"
            app:layout_constraintVertical_chainStyle = "packed"
            app:layout_constraintEnd_toEndOf = "parent"
            app:layout_constraintBottom_toTopOf = "@+id/ctrl1_tvi"
            app:layout_constraintTop_toTopOf = "parent"
            app:layout_constraintStart_toStartOf = "parent"
            android:fontFamily = "casual"
            />
    <TextView
            android:id = "@+id/ctrl1_tvi"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_marginStart = "50dp"
            android:textSize = "10sp"
            android:textColor = "@android:color/white"
            app:layout_constraintTop_toBottomOf = "@+id/song_tvi"
            app:layout_constraintEnd_toEndOf = "parent"
            app:layout_constraintStart_toStartOf = "parent"/>
    <TextView
            android:id = "@+id/ctrl2_tvi"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_marginStart = "50dp"
            android:textSize = "10sp"
            android:textColor = "@android:color/white"
            app:layout_constraintStart_toStartOf = "parent"
            app:layout_constraintTop_toBottomOf = "@+id/ctrl1_tvi"
            app:layout_constraintEnd_toEndOf = "parent"/>
    <TextView
            android:id = "@+id/ctrl3_tvi"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_marginStart = "50dp"
            android:textSize = "10sp"
            android:textColor = "@android:color/white"
            app:layout_constraintTop_toBottomOf = "@+id/ctrl2_tvi"
            app:layout_constraintEnd_toEndOf = "parent"
            app:layout_constraintStart_toStartOf = "parent"/>
    <TextView
            android:id = "@+id/ctrl4_tvi"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_marginStart = "50dp"
            android:textSize = "10sp"
            android:textColor = "@android:color/white"
            app:layout_constraintTop_toBottomOf = "@+id/ctrl3_tvi"
            app:layout_constraintEnd_toEndOf = "parent"
            app:layout_constraintStart_toStartOf = "parent"
            app:layout_constraintBottom_toBottomOf = "parent"/>
    <TextView
        android:text = "TextView"
        android:layout_width = "47dp"
        android:layout_height = "34dp"
        app:layout_constraintTop_toTopOf = "parent"
        app:layout_constraintBottom_toBottomOf = "parent"
        android:id = "@+id/bpm_tvi"
        app:layout_constraintVertical_bias = "0.723"
        app:layout_constraintStart_toStartOf = "parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>